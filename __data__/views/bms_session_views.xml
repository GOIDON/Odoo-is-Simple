<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Session -->
    <record id="view_session_form" model="ir.ui.view">
        <field name="name">session.form</field>
        <field name="model">bms.session</field>
        <field name="arch" type="xml">
            <form string="Session">
                <header>
                    <button name="action_confirm" type="object"
                            states="draft,rework"
                            string="Confirm" class="oe_highlight"/>
                    <button name="action_approval" string="Approval"
                            type="object" class="oe_highlight"
                            states="awaiting_approval"
                            groups="bms_cpdt.group_e_gov_manager"/>
                    <button name="action_re_work" string="Re-Work"
                            type="object" class="oe_highlight"
                            states="awaiting_approval"
                            groups="bms_cpdt.group_e_gov_manager"/>
                    <button name="action_confirm_method_send"
                            string="Confirm Method Send"
                            type="object" class="oe_highlight"
                            states="approved"/>
                    <button name="action_mark_received_document"
                            string="Mark Received"
                            type="object" class="oe_highlight"
                            states="vn_post"/>
                    <button name="action_mark_lost_document"
                            string="Mark Lost"
                            type="object" class="oe_highlight"
                            states="vn_post"/>
                    <button name="action_mark_done"
                            string="Mark Done"
                            type="object" class="oe_highlight"
                            states="vn_post_done"/>
                    <button name="action_mark_close"
                            string="Mark Close"
                            type="object" class="oe_highlight"
                            states="vn_post_done"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label string="Session Online Number"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_template_id" required="1"/>
                            <field name="document_send_type" required="1"/>
                            <field name="code" readonly="1"/>
                        </group>
                        <group>
                            <field name="date" required="1"/>
                            <field name="date_vn_post_send" readonly="0"/>
                            <field name="user_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="warning_miss_document" invisible="1"/>
                        </group>
                        <group string="Information">
                            <field name="partner_id" readonly="1"
                                   context="{'search_default_customer':1, 'show_address': 1}"
                                   options="{&quot;always_reload&quot;: True}"
                                   domain="[('customer', '=', True)]"/>
                        </group>
                        <group>
                            <field name="mobile" readonly="1"/>
                            <field name="email" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="file_template" string="File Template">
                            <group>
                                <field name="attachment_ids"
                                       widget="many2many_binary"
                                       readonly="1"/>
                                <field name="note"/>
                            </group>
                        </page>
                        <page name="attachment" string="Attachment of User">
                            <group>
                                <field name="attachment_ids_2"
                                       widget="many2many_binary"/>
                                <field name="note_2"/>
                            </group>
                        </page>
                        <page name="product" string="Products">
                            <field name="product_line_ids">
                                <tree string="Product" editable="bottom">
                                    <field name="code"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="name"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal"/>
                                    <field name="price_subtotal_tax"
                                           invisible="1"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <label for="user_confirm"/>
                                    <div class="oe_inline">
                                        <field name="user_confirm"
                                               invisible="1"/>
                                        <button name="user_confirmed"
                                                type="object" icon="fa-check"
                                                attrs="{'invisible': [('user_confirm','=','apply')]}"
                                                class="oe_highlight"/>
                                        <button name="user_unconfirmed"
                                                type="object" icon="fa-times"
                                                attrs="{'invisible': [('user_confirm','=','cancel')]}"/>
                                    </div>
                                    <label for="manager_confirm"/>
                                    <div class="oe_inline">
                                        <field name="manager_confirm"
                                               invisible="1"/>
                                        <button name="manager_confirmed"
                                                type="object" icon="fa-check"
                                                attrs="{'invisible': [('manager_confirm','=','apply')]}"
                                                class="oe_highlight"
                                                groups="bms_cpdt.group_e_gov_manager"/>
                                        <button name="manager_unconfirmed"
                                                type="object" icon="fa-times"
                                                attrs="{'invisible': [('manager_confirm','=','cancel')]}"
                                                groups="bms_cpdt.group_e_gov_manager"/>
                                    </div>
                                    <field name="payment_checked"
                                           invisible="1"/>
                                    <button name="payment_online" type="object"
                                            icon="fa-dollar"
                                            string="Payment Online"
                                            class="oe_highlight"
                                            attrs="{'invisible': [('payment_checked','=',False)]}"/>
                                </group>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed"/>
                                    <field name="amount_tax"/>
                                    <field name="amount_total"
                                           class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_session_tree" model="ir.ui.view">
        <field name="name">session.tree</field>
        <field name="model">bms.session</field>
        <field name="arch" type="xml">
            <tree string="Session" colors="red:warning_miss_document==True">
                <field name="name"/>
                <field name="date"/>
                <field name="document_template_id"/>
                <field name="document_send_type"/>
                <field name="warning_miss_document" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="search_session_filter">
        <field name="name">session.filter</field>
        <field name="model">bms.session</field>
        <field name="arch" type="xml">
            <search string="Session Filter">
                <field name="name" string="Session Name"
                       filter_domain="[('name','ilike',self)]"/>
                <field name="date"/>
                <field name="user_id"/>
                <filter string="My Sessions" name="my_sessions"
                        domain="[('user_id','=',uid)]"/>
                <filter string="Today" name="today"
                        domain="[('date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <group expand="0" string="Group By">
                    <filter string="Document Template" domain="[]"
                            context="{'group_by':'document_template_id'}"/>
                    <filter string="Company" domain="[]"
                            context="{'group_by':'company_id'}"/>
                    <filter string="User" domain="[]"
                            context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_session_form" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bms.session</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_session_tree"/>
        <field name="search_view_id" ref="search_session_filter"/>
        <field name="context">{"search_default_today":1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a Session.
            </p>
            <p>
                This is the list of all the file you recorded.
            </p>
        </field>
    </record>
    <record id="action_view_my_session" model="ir.actions.act_window">
        <field name="name">My Sessions</field>
        <field name="res_model">bms.session</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {'search_default_user_id': uid, 'default_user_id': uid,
            'readonly_by_pass': ['attachment_ids','']}
        </field>
        <field name="domain">[('user_id','=',uid)]</field>
        <field name="search_view_id" ref="search_session_filter"/>
        <field name="help" type="html">
            <p>
                Manage session of you.
            </p>
        </field>
    </record>
    <record id="open_view_session_list_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="action_view_my_session"/>
    </record>
